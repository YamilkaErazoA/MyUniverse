<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../views/partials/head'); %>
</head>
<body>
    <header>
        <t1 class="titulo"><center>Profile</center></t1>
    </header>
    <div class="container">
        <div class="center-align-items profile-info">
                <h3><strong>User name:</strong> <%=user.userName %></h3>
                <h3><strong>Email:</strong> <%= user.email %></h3>
        </div>


        <div class="form-parent card" id="Formulario2">
            <h3>Add an Image</h3>
            <form action="/post/createPost" enctype="multipart/form-data" method='POST'>
                <label for="postTitle">Title</label>
                <input type="text" placeholder="Enter Title" name='postTitle'>

                <label for="postCaption">Description</label>
                <input type="text" placeholder="Caption" name='postCaption'>

                <section>
                    <label for="postImage">Image</label>
                <label for="imgUpload" class="form-label"></label>
                <input type="file" class="form-control" id="imageUpload" name="file">

                    <!-- <section>
                            <input type="text" placeholder="Image" name='postImage'>
                            <input type="file" name="imageLink" id="pathToImage" class="inner-text-button">
                        </section> -->
                </section>

                <section class="center-align-items">
                    <input type="submit" value="Post" class="single-button main-button ">
                </section>

            </form>
        </div>
        <br><br>
                <div class="profile-buttons">
                    <a href="/feed">
                        <input type="button" value="Return to feed" class="sec-button main-button-distinct">
                    </a>

                    <a href="/logout">
                        <input type="button" value="Logout" class="sec-button warning">
                    </a>
                </div>



        <div class="profilePosts">
            <h3>Posts for <%= user.userName %></h3>
            <ul>
                <% for (var i=0; i < posts.length; i++) { %>
                <li>
                    <p class="title" ><a href="/post/<%= posts[i]._id%>" style="color: rgb(191, 255, 0); font-size: 26px;"><%= posts[i].title %></a></p>
                    <p class="caption"><%= posts[i].caption %></p>
                    <p class="image"><a href="<%= posts[i].link %>" class=""><img class="" src="<%= posts[i].image %>" /></a></p>
                    <p class="link"><a href="<%= posts[i].link %>" class=""><%= posts[i].link %></a></p>
                    <p class="like"><i class="fas fa-heart fa-3x"><%= posts[i].likes %></i></p>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
    <script src="js/main.js"></script>
</body>
</html>
